{
    "name": "spotisearch",
    "version": "0.0.1",
    "description": "Searches for tracks in your Spotify playlists",
    "main": "index.js",
    "scripts": {
        "build": "rimraf ./dist && cross-env NODE_ENV=production webpack",
        "publish": "aws s3 rm --recursive s3://spotify-search-yarrow-su && aws s3 cp --recursive dist s3://spotify-search-yarrow-su",
        "dev": "webpack-dev-server --content-base dist",
        "lint": "npm-run-all -c lint:*",
        "lint:eslint": "eslint src/*.js",
        "lint:stylelint": "stylelint src/*.scss",
        "lint:prettier": "prettier --check src/*.{js,scss}",
        "format": "npm-run-all -c format:*",
        "format:eslint": "eslint --fix src/*.js",
        "format:stylelint": "stylelint --fix src/*.scss",
        "format:prettier": "prettier --write src/*.{js,scss,svelte}"
    },
    "keywords": [
        "spotify",
        "search",
        "playlist"
    ],
    "author": "Alex Bukharov <alexv@yarrow.su>",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "autoprefixer": "^9.7.6",
        "bootstrap": "^4.4.1",
        "cross-env": "^7.0.2",
        "css-loader": "^3.5.2",
        "eslint": "^6.8.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-svelte3": "^2.7.3",
        "html-webpack-plugin": "^4.2.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.6",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^7.0.27",
        "prettier": "^2.0.4",
        "prettier-plugin-svelte": "^0.7.0",
        "promise-throttle": "^1.0.1",
        "ress": "^2.0.4",
        "rimraf": "^3.0.2",
        "sass-loader": "^8.0.2",
        "spotify-web-api-js": "^1.2.0",
        "style-loader": "^1.1.4",
        "stylelint": "^13.3.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-scss": "^3.17.0",
        "svelte": "^3.20.1",
        "svelte-loader": "^2.13.6",
        "svelte-preprocess": "^3.7.1",
        "sveltestrap": "^3.3.3",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-fix-style-only-entries": "^0.4.0"
    },
    "browserslist": [
        "last 2 versions"
    ],
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{svelte}": [
            "npm run lint:prettier"
        ],
        "*.{js}": [
            "npm run lint:eslint"
        ],
        "*.{scss}": [
            "npm run lint:stylelint"
        ]
    },
    "dependencies": {
        "svelte-spa-router": "^2.1.0"
    }
}
